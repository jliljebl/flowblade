#!/bin/bash

# Move to Flowblade root directory
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd $SCRIPT_DIR
cd ..
ROOT_DIR=$(pwd)

# Creates .pot file that can be turned to .po file for each language
xgettext -o locale/Flowblade/flowblade.pot app.py projectaction.py window/editorwindow.py widgets/clipeffectseditor.py widgets/compositeeditor.py dialogs/dialogs.py editevent.py editorpersistance.py widgets/guicomponents.py editools/movemodes.py window/panels.py persistance.py projectdata.py render/render.py syncsplitevent.py translations.py mlt/mlttransitions.py propertyedit/propertyeditorbuilder.py propertyedit/keyframeeditor.py widgets/middlebar.py widgets/medialog.py widgets/projectinfogui.py tools/titler.py widgets/rendergui.py dialogs/profilesmanager.py dialogs/preferenceswindow.py tools/batchrendering.py proxyediting.py actions/tlineaction.py propertyedit/extraeditors.py actions/trackaction.py medialinker.py patternproducer.py tools/gmic.py tools/gmic.py tools/toolsencoding.py monitorevent.py propertyedit/compositorfades.py audio/audiosync.py dialogs/diskcachemanagement.py toolsintegration.py projectmediaimport.py shortcuts.py actions/clipmenuaction.py dialogs/dialogutils.py edittools/trimmodes.py actions/menuactions.py exporting.py edittools/workflow.py kftoolmode.py tools/rotomask.py tools/simpleeditors.py jobs.py container/containeractions.py container/containerclip.py window/editorlayout.py tools/scripttool.py singletracktransition.py window/guipopover.py dialogs/projectdatavaultgui.py window/guipopoverclip.py widgets/tlinewidgets.py guiutils/utilsgtk.py mediaplugin.py actions/projectaddmediafolder.py propertyedit/animatedvalue.py guiutils/gtkbuilder.py window/mutabletoolstips.py

